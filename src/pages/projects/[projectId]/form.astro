  // --- ① フィールドセット内のクリックをまとめて扱う ---
  optionFieldset.addEventListener('click', (ev) => {
    // 削除ボタン？
    const delBtn = ev.target.closest('.delete-option-btn');
    if (delBtn) {
      // 削除確認
      if (!confirm("この要件を削除してよろしいですか？")) return;

      // 親 .form-body_wrapper を削除
      const wrapper = delBtn.closest('.form-body_wrapper');
      if (wrapper) {
        wrapper.remove();
      }
      return;
    }

    // 編集ボタン？
    const editBtn = ev.target.closest('.edit-option-btn');
    if (editBtn) {
      // 同じブロック内の <label> を取得
      const wrapper = editBtn.closest('.form-body_wrapper');
      if (!wrapper) return;
      const labelEl = wrapper.querySelector('label');
      if (!labelEl) return;

      // contenteditable をオンにして、フォーカス＆全選択
      labelEl.setAttribute('contenteditable', 'true');
      labelEl.focus();

      // 全選択 (モダンブラウザの場合)
      if (window.getSelection && document.createRange) {
        const range = document.createRange();
        range.selectNodeContents(labelEl);
        const sel = window.getSelection();
        sel.removeAllRanges();
        sel.addRange(range);
      } else {
        // 古いブラウザ向け (execCommand)
        document.execCommand('selectAll', false, null);
      }

      // blur したら編集終了（必要に応じて外さなくてもOK）
      labelEl.addEventListener('blur', () => {
        labelEl.removeAttribute('contenteditable');
      }, { once: true });

      return;
    }

    // それ以外のクリックは何もしない
